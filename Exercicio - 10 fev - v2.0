#include<iostrean>
using namespace std;

int main() {

  char op;
  float num1, num2;

  cout << "Escolha a operação: +, -, *, /: ";
  cin >> op;

  cout << "Entre dois operantes: ";
  cin >> num1 >> num2;

  switch(op) {

    case '+':
      cout << num1 << " + " << num2 << " = " << num1 + num2;
      break;

    case '-':
      cout << num1 << " - " << num2 << " = " << num1 - num2;
      break;

    case '*':
      cout << num1 << " * " << num2 << " = " << num1 * num2;
      break;

    case '/':
      cout << num1 << " / " << num2 << " = " << num1 / num2;
      break;

    default:
      cout << "Erro! operação incorreta";
      break;
  }

  return 0;